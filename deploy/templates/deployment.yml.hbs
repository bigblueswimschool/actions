apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: {{ name }}
  name: {{ name }}
  namespace: default
spec:
  replicas: {{ .Values.replicas }}
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: {{ name }}
  strategy:
    rollingUpdate:
      maxSurge: 2
      maxUnavailable: 0
    type: RollingUpdate
  minReadySeconds: 5
  template:
    metadata:
      labels:
        app: {{ name }}
    spec:
      containers:
        - image: {{ repository }}/{{ name }}:{{ version }}
          imagePullPolicy: IfNotPresent
          tty: true
          stdin: true
          name: {{ name }}
          ports:
          {{#each containerPorts}}
            - containerPort: {{ this.containerPort }}
          {{/each}}
          {{if readinessPath }}
          readinessProbe:
            httpGet:
              path: {{ readinessPath }}
              port: {{ port }}
            initialDelaySeconds: 5
            periodSeconds: 5
            successThreshold: 1
            timeoutSeconds: 5
          {{/if}}
          envFrom:
            {{#each envSecrets}}
            - secretRef:
                name: {{ this }}
            {{/each}}
          resources:
            requests:
              cpu: {{ cpu }}
              memory: {{ memory }}
          volumeMounts:
            {{#if apm }}
            - name: elastic-apm-node
              mountPath: "/usr/config/elastic-apm-node.js"
              subPath: elastic-apm-node.js
              readOnly: true
            {{/if}}
            - name: google-cloud
              mountPath: "/usr/config/google.json"
              subPath: googleCloud.json
              readOnly: true
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30
      volumes:
        {{#if apm }}
        - name: elastic-apm-node
          secret:
            secretName: elastic-apm-node
        {{/if}}
        - name: google-cloud
          secret:
            secretName: google-cloud
