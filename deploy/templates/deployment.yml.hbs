apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: {{ name }}
  name: {{ name }}
  namespace: default
spec:
  replicas: {{ replicas }}
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: {{ name }}
  strategy:
    rollingUpdate:
      maxSurge: 2
      maxUnavailable: 0
    type: RollingUpdate
  minReadySeconds: 5
  template:
    metadata:
      labels:
        app: {{ name }}
    spec:
      containers:
        - image: {{ repository }}/{{ name }}:{{ version }}
          imagePullPolicy: IfNotPresent
          tty: true
          stdin: true
          name: {{ name }}
          ports:
          {{#each containerPorts}}
            - containerPort: {{ this.containerPort }}
          {{/each}}
          {{#if readinessPath }}
          readinessProbe:
            httpGet:
              path: {{ readinessPath }}
              port: {{ port }}
            initialDelaySeconds: 5
            periodSeconds: 5
            successThreshold: 1
            timeoutSeconds: 5
          {{/if}}
          envFrom:
            {{#each envSecrets}}
            - secretRef:
                name: {{ this }}
            {{/each}}
          resources:
            requests:
              cpu: {{ cpu }}
              memory: {{ memory }}
          {{#greaterThan volumeMounts.length 0}}
          volumeMounts:
            {{#each volumeMounts}}
            - name: {{ this.name }}
              mountPath: {{ this.mountPath }}
              subPath: {{ this.subPath }}
              readOnly: {{ this.readOnly }}
            {{/each}}
          {{/greaterThan}}
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30
      {{#greaterThan volumes.length 0}}
      volumes:
        {{#each volumes}}
        - name: {{ this.name }}
          secret:
            secretName: {{ this.secret.secretName }}
        {{/each}}
      {{/greaterThan}}
