apiVersion: v1
kind: Service
metadata:
  name: {{ name }}
  namespace: {{ namespace }}
  annotations:
    cloud.google.com/neg: '{ \"exposed_ports\": { \"3000\": { \"name\": \"{{ name }}-{{ namespace }}\" } } }'
spec:
  ports:
  {{#each ports}}
    - name: {{ this.name }}
      port: {{ this.port }}
      protocol: {{ this.protocol }}
      targetPort: {{ this.targetPort }}
  {{/each}}
  selector:
    app: {{ name }}
  type: "NodePort"