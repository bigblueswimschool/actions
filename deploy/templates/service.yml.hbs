apiVersion: v1
kind: Service
metadata:
  name: {{ name }}
  namespace: {{ namespace }}
  annotations:
    cloud.google.com/neg: '{ "exposed_ports": { "3000": { "name": "{{ name }}-{{ namespace }}" } } }'
spec:
  ports:
    - name: http
      port: 3000
      protocol: TCP
      targetPort: 3000
  selector:
    app: {{ name }}
  type: "NodePort"